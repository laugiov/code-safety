# =============================================================================
# Taint Analysis Masterclass - EditorConfig
# https://editorconfig.org
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default settings for all files
# =============================================================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =============================================================================
# Python files
# =============================================================================

[*.py]
indent_size = 4
max_line_length = 100

# =============================================================================
# JavaScript / TypeScript
# =============================================================================

[*.{js,jsx,ts,tsx}]
indent_size = 2

# =============================================================================
# Web files
# =============================================================================

[*.{html,css,scss,sass,less}]
indent_size = 2

# =============================================================================
# Data / Config files
# =============================================================================

[*.{json,yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 4

# =============================================================================
# Documentation
# =============================================================================

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.rst]
indent_size = 3

# =============================================================================
# Shell scripts
# =============================================================================

[*.{sh,bash,zsh}]
indent_size = 2

# =============================================================================
# Makefiles (require tabs)
# =============================================================================

[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# =============================================================================
# Git files
# =============================================================================

[.git*]
indent_size = 4

# =============================================================================
# Docker
# =============================================================================

[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# =============================================================================
# CodeQL
# =============================================================================

[*.ql]
indent_size = 2

[*.qll]
indent_size = 2

# =============================================================================
# Pysa models
# =============================================================================

[*.pysa]
indent_size = 4

# =============================================================================
# GitHub Actions
# =============================================================================

[.github/workflows/*.yml]
indent_size = 2

# =============================================================================
# Configuration files
# =============================================================================

[.pyre_configuration]
indent_size = 2

[taint.config]
indent_size = 2
